<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentic.SignUpFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".authentic.SignUpActivity">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_primary_btn"
            android:fontFamily="@font/montserrat_bold"
            android:text="Đăng ký"
            android:textColor="@color/intro_title_color"
            app:layout_constraintEnd_toEndOf="@+id/etComfirmPasswordSignUp"
            app:layout_constraintStart_toStartOf="@+id/etComfirmPasswordSignUp"
            app:layout_constraintTop_toBottomOf="@+id/etComfirmPasswordSignUp" />

        <EditText
            android:id="@+id/etEmailSignUp"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/tab_indicate_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/etPasswordSignUp"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/tab_indicate_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/etEmailSignUp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etEmailSignUp"
            app:layout_constraintTop_toBottomOf="@+id/etEmailSignUp" />

        <EditText
            android:id="@+id/etComfirmPasswordSignUp"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/tab_indicate_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/etPasswordSignUp"
            app:layout_constraintStart_toStartOf="@+id/etPasswordSignUp"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordSignUp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="272dp"
            android:layout_height="87dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_onmovie" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/tab_indicate_gray"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/etEmailSignUp"
            app:layout_constraintEnd_toEndOf="@+id/etEmailSignUp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etEmailSignUp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận mật khẩu"
            android:textColor="@color/tab_indicate_gray"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/etComfirmPasswordSignUp"
            app:layout_constraintEnd_toEndOf="@+id/etComfirmPasswordSignUp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etComfirmPasswordSignUp"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordSignUp"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mật khẩu"
            android:textColor="@color/tab_indicate_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/etPasswordSignUp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etPasswordSignUp"
            app:layout_constraintTop_toBottomOf="@+id/etEmailSignUp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="56dp"
            android:text="Bạn đã có tài khoản?"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/btnSignUp"
            app:layout_constraintHorizontal_bias="0.439"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUp" />

        <TextView
            android:id="@+id/tvSignInBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="48dp"
            android:clickable="true"
            android:onClick="onClick"
            android:text="Đăng nhập ngay"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUp"
            tools:ignore="OnClick" />

        <View
            android:id="@+id/underlineSignUpLogin"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-4dp"
            android:outlineAmbientShadowColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.759"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSignInBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>